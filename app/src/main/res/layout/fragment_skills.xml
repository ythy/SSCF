<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_version" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/tv_skills_name" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextViewTitle"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp" android:baselineAligned="false">
        <com.mx.cosmo.common.FloatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_skill_description_float"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginStart="12dp"
                android:layout_above="@+id/overflowTextView" />

        <TextView android:text="@string/float_placeholder" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/overflowTextView"
                  android:layout_below="@+id/imageView"
                  android:layout_alignParentStart="true"
                  android:layout_marginTop="0dp" />

        <ImageView android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentStart="false"
                   android:layout_alignParentEnd="false"
                   android:layout_alignParentLeft="false"
                   android:id="@+id/imageView" />
    </RelativeLayout>
    <!--LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="2dp" android:baselineAligned="false">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_skill_description" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout-->

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp" android:baselineAligned="false">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_skill_effect" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>