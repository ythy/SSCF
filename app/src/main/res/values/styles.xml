<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 布局类样式 -->
    <style name="LayoutRounding" parent="AppTheme">
        <item name="android:background">@drawable/box_back</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LayoutRoundingWithPadding" parent="LayoutRounding">
        <item name="android:padding">5dp</item>
    </style>

    <style name="LayoutRowInRounding" parent="AppTheme">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LayoutRowInRoundingTop" parent="LayoutRowInRounding">
        <item name="android:background">@drawable/box_top</item>
    </style>

    <style name="LayoutRowInRoundingTopDash" parent="LayoutRowInRounding">
        <item name="android:background">@drawable/box_top_dash</item>
    </style>

    <!-- TextView样式 -->
    <style name="TextViewTitle" parent="AppTheme">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <!-- ListView 样式 -->
    <style name="ListViewTier" parent="AppTheme">
        <item name="android:background">@drawable/box_left</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

    <style name="ListViewMain" parent="AppTheme">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
